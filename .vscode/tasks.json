{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "SCSS compiler",
            "type": "shell",
            "command": "node-sass styles.scss ./static/assets/css/style.css",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}